<?xml version="1.0" encoding="UTF-8"?>

<configuration status="WARN" monitorInterval="60" shutdownHook="disable">
	<properties>
		<property name="SERVER_ID">1</property>
		<property name="SERVER_NAME">game</property>
		<property name="LOG_HOME">/home/log/sgame/${SERVER_NAME}/${SERVER_ID}
		</property>
	</properties>

	<appenders>
		<!-- 研发日志 -->
		<RollingRandomAccessFile name="DevLog" fileName="${LOG_HOME}/${SERVER_NAME}" filePattern="${LOG_HOME}/${SERVER_NAME}.%d{yyyy-MM-dd-HH}.log" immediateFlush="false">
			<PatternLayout pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %level %file:%line - %msg%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
			</Policies>
		</RollingRandomAccessFile>
	</appenders>
	
	<loggers>
		<asyncLogger name="com.alibaba.druid" level="warn"/>
		
		<asyncRoot level="DEBUG" includeLocation="true">
			<appender-ref ref="DevLog" />
		</asyncRoot>
	</loggers>
</configuration>